<!DOCTYPE html>
<html>
	<head>
	  <title>Properties</title>
	  <style>
	    /* Add your CSS styles here */
	    table {
	      width: 100%;
	      border-collapse: collapse;
	    }

	    th, td {
	      border: 1px solid #dddddd;
	      text-align: left;
	      padding: 8px;
	    }

	    th {
	      background-color: #f2f2f2;
	    }

	    .property {
	      background-color: #ffffff;
	    }

	    .property:nth-child(even) {
	      background-color: #f2f2f2;
	    }
	  </style>
	</head>
	<body>
	  <h1>Properties</h1>
	  <form action="/properties/search_property" method="get">
	  	<%= puts "Auth token: #{params[:auth_token]}" %>
	    <label for="types">Type:</label>
	    <input type="text" id="types" name="types">
	    <label for="city">City:</label>
	    <input type="text" id="city" name="city">
	    <label for="district">District:</label>
	    <input type="text" id="district" name="district">
	    <label for="beds_number">BedRoom:</label>
	    <input type="number" id="beds_number" name="beds_number">
	    <label for="rent_per_month">Rent Per Month:</label>
	    <input type="text" id="rent_per_month" name="rent_per_month">
	  	<input type="hidden" name="auth_token" value= <%= params[:auth_token] %> >
	    <button type="submit">Search</button>
	  </form><br>
	  <%= render partial: 'properties_table', locals: { properties: @properties } %>
	</body>
</html>
